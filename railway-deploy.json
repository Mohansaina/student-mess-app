{
  "name": "student-mess-app",
  "description": "Student Hostel & Mess Management System - Full Stack Application",
  "repository": "https://github.com/Mohansaina/student-mess-app",
  "framework": "express",
  "region": "us-west1",
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3001",
    "DB_URI": "mongodb+srv://studentmess:SecurePass2024@cluster0.mongodb.net/studenthotel",
    "JWT_SECRET": "student-mess-ultra-secure-jwt-secret-production-2024",
    "JWT_REFRESH_SECRET": "student-mess-refresh-token-ultra-secure-production-2024", 
    "JWT_EXPIRES_IN": "1h",
    "JWT_REFRESH_EXPIRES_IN": "7d",
    "FRONTEND_URL": "https://mohansaina.github.io/student-mess-app",
    "UPLOAD_PATH": "./uploads",
    "MAX_FILE_SIZE": "5242880",
    "USE_S3": "false",
    "RATE_LIMIT_WINDOW_MS": "900000",
    "RATE_LIMIT_MAX_REQUESTS": "100",
    "BCRYPT_SALT_ROUNDS": "12"
  },
  "build": {
    "commands": [
      "cd backend && npm install --production"
    ]
  },
  "start": "cd backend && node src/server.js",
  "healthcheck": "/api/health"
}